@model List<Movie>

    <h1>Movie List</h1>
    <a href="Movie/MovieForm" class="btn btn-dark">Add Movie</a>
    <br />

<table class="table table-bordered" >
    <tr>
        <th>Title</th>
        <th>Genre</th>
        <th>Runtime</th>
    </tr>

    @foreach(var movie in Model)
    {
    <tr>
        <td>@movie.Title</td>
        <td>@movie.Genre</td>
        <td>@movie.Runtime</td>
        <td><a href="Movie/DeleteMovie?id=@movie.Id" class="btn btn-light">Delete @movie.Title</a></td>
        <td><a href="Movie/MovieForm?id=@movie.Id" class="btn btn-light">Edit @movie.Title</a></td>
    </tr>
    
    }

</table>

